<hr />
<section class="info_section">
<h4>Orders</h4>
<h5><a name="orders_active">Active Orders</a></h5>
<table class="table table-hover table-sm merchant_details" frame = "box" id="merchant_product_index">
<thead>
  <tr>
    <th>#</th>
    <th>DATE</th>
    <th>STATUS</th>
    <th>ITEMS</th>
    <th>EDIT</th>
  </tr>
</thead>
</table>
<p>No Order History</p>
<br /><br />
<h5><a name="orders_inactive">Inactive Orders</a></h5>
<table class="table table-hover table-sm merchant_details" frame = "box" id="merchant_product_index">
<thead>
  <tr>
    <th>#</th>
    <th>DATE</th>
    <th>STATUS</th>
    <th>ITEMS</th>
    <th>EDIT</th>
  </tr>
</thead>
</table>
<p> No Order History </p>
<br /><br />
<hr />
<h4>Products</h4>
<h5><a name="products_active">Active Products</a></h5>
<table class="table table-hover table-sm merchant_details" frame = "box">
<thead>
  <tr>
    <th>NAME</th>
    <th>DESCRIPTION</th>
    <th>ACTIVE</th>
    <th>STOCK QTY.</th>
    <th>PRICE</th>
    <th>PHOTO</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>
  </thead>
<% @merchant.products.each do |product| %>
<% if product.active == true %>
  <tr>
    <td><%= product.name%></td>
    <td><%= product.description %></td>
    <td>✅</td>
    <td><%= product.stock_qty %></td>
    <td>$<%= product.price%></td>
    <td><%= image_tag product.photo_url, class: "sm_product_image", alt:"#{product.name}" %></td>
    <td><%= link_to "Edit Product", edit_product_path(product.id) %></td>
    <td><%= link_to "Delete Product", product_path(product.id), method: :delete, data: {confirm: "Are you sure?"}%></td>
  </tr>
<% end %>
<% end %>
</table>
<br /><br />
<h5><a name="products_inactive">Inactive Products</a></h5>
<table class="table table-hover table-sm merchant_details" frame = "box">
<thead>
  <tr>
    <th>NAME</th>
    <th>DESCRIPTION</th>
    <th>ACTIVE</th>
    <th>STOCK QTY.</th>
    <th>PRICE</th>
    <th>PHOTO</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>
  </thead>
<% @merchant.products.each do |product| %>
<% if product.active == false %>
  <tr>
    <td><%= product.name%></td>
    <td><%= product.description %></td>
    <td>❌</td> 
    <td><%= product.stock_qty %></td>
    <td>$<%= product.price%></td>
    <td><%= image_tag product.photo_url, class: "sm_product_image", alt:"#{product.name}" %></td>
    <td><%= link_to "Edit Product", edit_product_path(product.id) %></td>
    <td><%= link_to "Delete Product", product_path(product.id), method: :delete, data: {confirm: "Are you sure?"}%></td>
  </tr>
<% end %>
<% end %>
</table>


